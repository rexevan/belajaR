#             turvar_cek == FALSE & turtahun_cek == TRUE  ~ 3,
#             turvar_cek == TRUE  & turtahun_cek == TRUE  ~ 4
#         )
#     )

tbl_jenis_header

tambah_prefix <- function(tbl, prefix = "prefix_") {
    tbl |> tibble() |> rename_with(~ paste0(prefix, .x))
}


tbl_vervar <- data$vervar |> tambah_prefix("vervar_")
tbl_var <- data$var |> tambah_prefix("var_")
tbl_turvar <- data$turvar |> tambah_prefix("turvar_")
tbl_tahun <- data$tahun |> tambah_prefix("tahun_")
tbl_turtahun <- data$turtahun |> tambah_prefix("turtahun_")


tbl_vervar

tbl_a <- tibble(konten = data$datacontent)
tbl_b <- tbl_a |>
    transmute(
        nama_konten = names(konten),
        isi_konten = map_dbl(konten, unlist) 
        )

# potong / separate variabel dan tahun terlebih dahulu
tbl_c <- tbl_b |>
    bind_cols(tbl_var, tbl_tahun) |>
    separate(col = nama_konten, into = c("vervar_val", "lainnya"), sep = tbl_var$var_val |> as.character(), remove = FALSE) |>
    separate(col = lainnya, into = c("turvar_val", "turtahun_val"), sep = tbl_tahun$tahun_val |> as.character()) |>
# transformasi kolom verval_val, turvar_val, dan turtahun_val menjadi numeric
        mutate(
            vervar_val = vervar_val |> as.numeric(),
            turvar_val = turvar_val |> as.numeric(),
            turtahun_val = turtahun_val |> as.numeric()
            )


tbl_b |>
    bind_cols(tbl_var, tbl_tahun) |>
    mutate(hoam = str_split_i(nama_konten, var_val, 1))

# setelah itu baru joinkan verval, turvaer, dan turtahun
tbl_d <- tbl_c |>
    left_join(tbl_vervar, join_by(vervar_val)) |> 
    left_join(tbl_turvar, join_by(turvar_val)) |> 
    left_join(tbl_turtahun, join_by(turtahun_val))

tbl_e <- tbl_d |>
    select(
        nama_konten,
        isi_konten,
        vervar_val, var_val, turvar_val, tahun_val, turtahun_val,
        vervar_label, var_label, turvar_label, tahun_label, turtahun_label,
        everything()
    )


view(tbl_e)
